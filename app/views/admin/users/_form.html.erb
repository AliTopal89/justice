    <dd><%= f.text_field :last_name %></dd>

    <dt><%= f.label :email %></dt>
    <dd><%= f.text_field :email %></dd>

    <dt><%= f.label :password %></dt>
    <dd><%= f.text_field :password %></dd>

    <dt><%= f.label :approved %></dt>
    <dd><%= f.check_box :approved %></dd>

    <dt><%= f.label :suspended %></dt>
    <dd><%= f.check_box :suspended %></dd>
  </dl>

  <div class="actions">
    <%= f.submit %>
  </div>
